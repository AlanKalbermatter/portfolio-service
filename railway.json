{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "java -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -Dspring.profiles.active=railway -Dmanagement.endpoints.web.exposure.include=health,info -Dmanagement.metrics.enable.system=false -Dmanagement.metrics.enable.process=false -jar app.jar",
    "healthcheckPath": "/actuator/health",
    "healthcheckTimeout": 180,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
