{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "java -Dspring.profiles.active=railway -Dmanagement.endpoints.web.exposure.include=* -Dmanagement.endpoint.health.show-details=always -jar app.jar",
    "healthcheckPath": "/actuator/health",
    "healthcheckTimeout": 180,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
